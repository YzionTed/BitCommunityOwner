<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_48"
        android:background="@color/common_bg_blue">

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/common_sp_18" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_dp_2"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back_default"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btn_right_action_bar"
            android:layout_width="@dimen/common_dp_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="@dimen/common_sp_16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right_action_bar"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_dp_16"
            android:padding="@dimen/common_dp_12"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb_loaing_action_bar"
            android:layout_width="@dimen/common_dp_30"
            android:layout_height="@dimen/common_dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/common_dp_10"
            android:indeterminateDrawable="@anim/cycle_loading_anim"
            android:interpolator="@android:anim/linear_interpolator"
            android:visibility="gone" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_dp_6"
            android:text="申请记录"
            android:textColor="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</layout>