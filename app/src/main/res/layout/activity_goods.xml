<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bs_grary3_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_48" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/common_dp_5"
            android:layout_marginTop="@dimen/common_dp_20">
            <ImageView
                android:id="@+id/iv_merchant_icon"
                android:layout_width="@dimen/common_dp_100"
                android:layout_height="@dimen/common_dp_100"
                android:src="@mipmap/image_default_small"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dp_5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_sp_18"/>
                <TextView
                    android:id="@+id/tv_merchant_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_sp_14"/>
                <TextView
                    android:id="@+id/tv_merchant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_dp_5"
                    android:textSize="@dimen/common_sp_14"/>
                <TextView
                    android:id="@+id/tv_merchant_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_sp_14"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_10"
            android:text="商户介绍"
            android:layout_margin="@dimen/common_dp_10"/>
        <TextView
            android:id="@+id/tv_merchant_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_dp_10"
            android:background="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_10"
            android:text="服务介绍"
            android:layout_margin="@dimen/common_dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_dp_10"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_service_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</layout>
