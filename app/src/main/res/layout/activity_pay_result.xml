<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/bs_grary3_bg">
        <include
            android:id="@+id/toolbar"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_48" />

        <ImageView
            android:id="@+id/iv_pay_result"
            android:layout_width="@dimen/common_dp_60"
            android:layout_height="@dimen/common_dp_60"
            android:layout_marginTop="@dimen/common_dp_40"
            android:src="@mipmap/icon_success"/>
        <TextView
            android:id="@+id/tv_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_sp_16"
            android:textColor="@color/common_bg_blue3"
            android:layout_marginTop="@dimen/common_dp_12"
            android:text="缴费成功"/>
        <TextView
            android:id="@+id/tv_pay_resason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_sp_16"
            android:layout_marginTop="@dimen/common_dp_24"
            android:text="成功缴纳物业管理费"/>
        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_sp_20"
            android:layout_marginTop="@dimen/common_dp_24"
            android:textStyle="bold"
            android:text="￥350"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_pay_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_dp_30"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_repay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_40"
                android:layout_marginLeft="@dimen/common_dp_16"
                android:layout_marginRight="@dimen/common_dp_16"
                android:layout_marginTop="@dimen/common_dp_24"
                android:background="@drawable/bg_btn_blue"
                android:text="重新缴费"
                android:textColor="@color/white"
                android:textSize="@dimen/common_sp_14" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay_success"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_34"
            android:layout_marginLeft="@dimen/common_dp_16"
            android:layout_marginRight="@dimen/common_dp_16"
            android:layout_marginTop="@dimen/common_dp_30"
            android:background="@drawable/bg_btn_blue"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/common_sp_18" />

    </LinearLayout>
</layout>
