<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data></data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bs_grary3_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_48"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_10"
            android:text="掌居宝"
            android:textColor="@color/blue1"
            android:textSize="@dimen/common_sp_20"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_10"
            android:text="For Android"
            android:textColor="@color/blue1"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dp_10"
            android:textSize="@dimen/common_sp_16"/>

        <!--<ImageView-->
        <!--android:id="@+id/iv_qrcode"-->
        <!--android:layout_width="@dimen/common_dp_226"-->
        <!--android:layout_height="@dimen/common_dp_226"-->
        <!--android:layout_marginTop="@dimen/common_dp_20"-->
        <!--android:scaleType="fitXY"/>-->
    </LinearLayout>
</layout>
