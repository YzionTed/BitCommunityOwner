<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <include
        layout="@layout/action_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/newtitle"
                android:layout_width="wrap_content"
                android:textColor="@color/grary3"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_sp_18"
                android:paddingBottom="@dimen/common_dp_8"
                android:paddingTop="@dimen/common_dp_15"
                android:paddingLeft="@dimen/common_dp_15"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dp_15"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/editorName"
                    android:paddingLeft="@dimen/common_dp_10"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/img"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:textSize="@dimen/common_sp_14"
                android:lineSpacingExtra="@dimen/common_dp_6"
                android:padding="@dimen/common_dp_10"
                android:textColor="@color/grary3"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
