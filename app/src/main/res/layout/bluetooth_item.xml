<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/blue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dp_10"
        android:layout_marginLeft="@dimen/common_dp_2"
        android:layout_marginRight="@dimen/common_dp_2"
        android:gravity="center"
        android:textSize="@dimen/common_sp_16" />
    <TextView
        android:id="@+id/blue_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dp_10"
        android:layout_marginLeft="@dimen/common_dp_2"
        android:layout_marginRight="@dimen/common_dp_2"
        android:gravity="center"
        android:textSize="@dimen/common_sp_16" />
</LinearLayout>
