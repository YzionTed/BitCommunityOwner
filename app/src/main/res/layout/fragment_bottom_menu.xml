<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_48"
        android:layout_margin="@dimen/common_dp_2"
        android:gravity="center"
        android:text="联系物业"
        android:textColor="@color/black"
        android:textSize="@dimen/common_sp_18"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dp_12"
        android:background="@color/transparent" >
        <ListView
            android:id="@+id/lv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dp_12"
        android:background="@color/transparent" >
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_48"
            android:layout_margin="@dimen/common_dp_2"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/blue1"
            android:textSize="@dimen/common_sp_16"
            tools:text="取消"
            android:background="@drawable/bottom_menu_btn_selector">

        </TextView>
    </LinearLayout>


</LinearLayout>
