<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>
    <android.support.v7.widget.CardView
        android:id="@+id/item_info"
        android:layout_width="@dimen/common_dp_340"
        android:layout_height="@dimen/common_dp_450"
        app:cardBackgroundColor="@color/transparent"
        android:clickable="false"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_close"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/corners_call_bg">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择当前住房"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_sp_18"
                    android:layout_marginTop="@dimen/common_dp_15"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:layout_marginTop="@dimen/common_dp_5">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_house"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/common_dp_5"/>
                    <RelativeLayout
                        android:id="@+id/rv_call_animation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_call_animation"
                            android:layout_width="@dimen/common_dp_160"
                            android:layout_height="@dimen/common_dp_160"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside" />
                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="@dimen/common_dp_100"
                            android:layout_height="@dimen/common_dp_100"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="60sp"
                            android:textStyle="bold"
                            android:text="3"/>
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/common_dp_5"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/common_sp_18"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
