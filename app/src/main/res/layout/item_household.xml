<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_dp_3"
        android:paddingLeft="@dimen/common_dp_10"
        android:paddingTop="@dimen/common_dp_3">

        <ImageView
            android:id="@+id/iv_household"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="@dimen/common_dp_48"
            android:src="@mipmap/avatar_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="@dimen/common_dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_household_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:background="@drawable/bg_edittext"
                    android:text="业主"
                    android:textColor="@color/blue1" />

                <TextView
                    android:id="@+id/tv_household_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:text="陈建国"
                    android:textColor="@color/black1" />

                <TextView
                    android:id="@+id/tv_household_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:text="()"
                    android:textColor="@color/black1"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/common_dp_12"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="到期日期：不限" />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/common_dp_8"
            android:layout_weight="1"
            android:src="@mipmap/icon_next"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_household_limit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:layout_margin="@dimen/common_dp_5"
        android:background="@color/bs_grary3"
        android:gravity="center" />
</LinearLayout>