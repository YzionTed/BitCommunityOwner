<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.BIT.fuxingwuye.activities.fragment.mineFragment.FragmentMine">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bs_grary3_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_100"
                    android:background="@color/common_bg_blue">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/common_dp_10"
                        android:text="个人中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_sp_18"/>

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/common_dp_10"
                        android:src="@mipmap/icon_setting" android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_100"
                    android:layout_marginLeft="@dimen/common_dp_10"
                    android:layout_marginRight="@dimen/common_dp_10"
                    android:layout_marginTop="@dimen/common_dp_60"
                    android:background="@drawable/bg_white1">

                    <com.BIT.fuxingwuye.views.XCRoundImageView
                        android:id="@+id/iv_mine_avatar"
                        android:layout_width="@dimen/common_dp_68"
                        android:layout_height="@dimen/common_dp_68"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_30"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/avatar_default"/>

                    <TextView
                        android:id="@+id/tv_mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv_mine_avatar"
                        android:text="USERNAME"
                        android:textSize="@dimen/common_sp_16"/>

                    <ImageView
                        android:id="@+id/iv_review"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/common_dp_26"
                        android:src="@mipmap/icon_pending_review" android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dp_10"
                android:layout_marginRight="@dimen/common_dp_10"
                android:layout_marginTop="@dimen/common_dp_16"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_mine_house"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_house"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv1"
                        android:text="住房管理"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_park"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_car"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv2"
                        android:text="车位管理"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_mine_pay"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_dp_20"
                    android:background="@color/white" android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_paylist"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv3"
                        android:text="缴费记录"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_repair"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white" android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_repairlist"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv4"
                        android:text="报修记录"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_pass"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_upgrade"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv5"
                        android:text="放行条管理"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_dp_20"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_suggest"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv6"
                        android:text="建议反馈"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_about"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_about_us"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv7"
                        android:text="关于"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_password"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_dp_52"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="@dimen/common_dp_30"
                        android:layout_height="@dimen/common_dp_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:src="@mipmap/icon_about_us"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_dp_10"
                        android:layout_toRightOf="@+id/iv8"
                        android:text="重置密码"
                        android:textColor="@color/bs_grary2"
                        android:textSize="@dimen/common_sp_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_dp_12"
                        android:src="@mipmap/icon_next"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dp_0.5"
                    android:background="@color/bs_grary4_line"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/common_dp_10"
                android:layout_marginLeft="@dimen/common_dp_10"
                android:layout_marginRight="@dimen/common_dp_10"
                android:layout_marginTop="@dimen/common_dp_30"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/outlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:text="退出登录"
                    android:textColor="#017bee"
                  />


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
