<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.BIT.fuxingwuye.activities.fragment.smartGate.FragmentGate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bs_grary3_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dp_38"
            android:background="@color/blue1"
            android:gravity="center"
            android:text="门禁"
            android:textColor="@color/white"
            android:textSize="@dimen/common_sp_16" />

        <LinearLayout
            android:id="@+id/ll_no_gatelimit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_280"
                android:layout_marginTop="@dimen/common_dp_24"
                android:src="@mipmap/no_gate_limit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_dp_12"
                android:text="暂无门禁权限"
                android:textColor="@color/blue1"
                android:textSize="@dimen/common_sp_16"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/rg_gate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_remote_gate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_dp_40"
                    android:layout_weight="1"
                    android:background="@drawable/radio_bg_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_dp_5"
                    android:paddingTop="@dimen/common_dp_5"
                    android:text="远程门禁"
                    android:textColor="@drawable/radio_color_selector"
                    android:textSize="@dimen/common_dp_16" />

                <RadioButton
                    android:id="@+id/rb_bluetooth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_dp_40"
                    android:layout_weight="1"
                    android:background="@drawable/radio_bg_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_dp_5"
                    android:paddingTop="@dimen/common_dp_5"
                    android:text="蓝牙门禁"
                    android:textColor="@drawable/radio_color_selector"
                    android:textSize="@dimen/common_dp_16" />
            </RadioGroup>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/grid_door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dp_10"
                android:background="@drawable/bg_white1"
                android:padding="@dimen/common_dp_10"
                android:visibility="visible"/>
            <LinearLayout
                android:id="@+id/ll_bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/common_dp_10"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white1"
                    android:padding="@dimen/common_dp_5"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="@dimen/common_dp_200"
                        android:layout_height="@dimen/common_dp_200">
                        <com.BIT.fuxingwuye.views.DoughnutProgress
                            android:id="@+id/circle_progress"
                            android:layout_width="@dimen/common_dp_200"
                            android:layout_height="@dimen/common_dp_200"
                            android:layout_centerInParent="true"/>
                        <ImageView
                            android:id="@+id/iv_animation"
                            android:layout_width="@dimen/common_dp_136"
                            android:layout_height="@dimen/common_dp_136"
                            android:src="@mipmap/btn_gate"
                            android:paddingTop="@dimen/common_dp_4"
                            android:layout_centerInParent="true"
                            android:scaleType="centerInside"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue1"
                        android:textSize="@dimen/common_sp_16"
                        android:layout_marginBottom="@dimen/common_dp_10"
                        android:text="点击开门"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dp_0.5"
                        android:background="@color/bs_grary4_line" />
                    <RelativeLayout
                        android:id="@+id/rl_change_gate"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_dp_52"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="@dimen/common_dp_30"
                            android:layout_height="@dimen/common_dp_30"
                            android:layout_marginLeft="@dimen/common_dp_10"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_change_gate"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_dp_10"
                            android:text="切换门禁"
                            android:layout_toRightOf="@+id/iv1"
                            android:textColor="@color/bs_grary2"
                            android:textSize="@dimen/common_sp_14" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_next"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/common_dp_12"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dp_0.5"
                        android:background="@color/bs_grary4_line" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/common_dp_52"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="@dimen/common_dp_30"
                            android:layout_height="@dimen/common_dp_30"
                            android:layout_marginLeft="@dimen/common_dp_10"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_shake"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_dp_10"
                            android:text="摇一摇开门"
                            android:layout_toRightOf="@+id/iv2"
                            android:textColor="@color/bs_grary2"
                            android:textSize="@dimen/common_sp_14" />
                        <Switch
                            android:id="@+id/shake_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_next"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="true"
                            android:layout_marginRight="@dimen/common_dp_12"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tip_gate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue1"
                    android:layout_marginTop="@dimen/common_dp_5"
                    android:paddingRight="@dimen/common_dp_10"
                    android:text="*蓝牙门禁功能需用户打开手机蓝牙功能"
                    android:gravity="right"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
