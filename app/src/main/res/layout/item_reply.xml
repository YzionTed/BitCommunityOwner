<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/common_dp_0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.bit.fuxingwuye.views.XCRoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/common_dp_40"
            android:layout_height="@dimen/common_dp_40"
            android:src="@mipmap/avatar_default"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dp_5"
                android:textColor="@color/blue1"
                android:text="ssssssss"/>
            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="回复"/>
            <TextView
                android:id="@+id/tv_secondname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue1"
                android:visibility="gone"
                android:text="ssssssss"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingRight="@dimen/common_dp_10"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_dp_5"
        android:layout_marginRight="@dimen/common_dp_5"
        android:padding="@dimen/common_dp_5"
        android:textColor="@color/black"/>
</LinearLayout>