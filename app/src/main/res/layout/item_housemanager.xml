<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_dp_10"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_dp_10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_34"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="@dimen/common_dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/blue1"/>
                <TextView
                    android:id="@+id/tv_community"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="府兴家园"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:textSize="@dimen/common_sp_18"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue1"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/ll_household_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_dp_10"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue1"
                        android:text="住户管理"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_next"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dp_5"
                android:paddingTop="@dimen/common_dp_5"
                android:paddingBottom="@dimen/common_dp_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="@dimen/common_dp_24"
                    android:layout_height="@dimen/common_dp_24"
                    android:src="@mipmap/icon_house_black"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:text="业主"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/blue1"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dp_12"
                    android:text="东区A栋2楼205房"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dp_1"
                android:layout_margin="@dimen/common_dp_5"
                android:background="@color/bs_grary3"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_limitetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dp_5"
                android:text="到期时间：不限"/>
        </LinearLayout>
        


        </android.support.v7.widget.CardView>
</FrameLayout>